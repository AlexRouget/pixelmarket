<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>

        <meta name="description" content="{% block metaDescription %}{% endblock %}"/>

        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>

        {% block stylesheets %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous"/>

            <link rel="stylesheet" href="{{ asset('css/reset.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/app.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/menu-burger.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/app-mobile.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/app-size-limit.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/menu-profile.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/animation.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/checkbox.css') }}"/>
            <link rel="stylesheet" href="{{ asset('css/formValid.css') }}"/>
        {% endblock %}
    </head>
    <body>
        <div id="body-content" class="d-flex flex-column">
            {% block header %}
                {% block navbar %}
                    {% include 'navbar/navbar.html.twig' %}
                {% endblock %}

            {% endblock %}

            <!-- MESSAGE FLASH -->
            {% block flash %}
                {% include 'flash.html.twig'%}
            {% endblock %}

            {% block pageContent %}

                <div class="container-fluid h-100">
                    {% block headerContent %}{% endblock %}
                </div>

                <div id="page-side-content">
                    <div id="base-sidebar" class="col-3">
                        {% block sidebarContent %}{% endblock %}
                    </div>
                    <div id="base-main" class="col container-fluid">
                        {% block mainContent%}{% endblock %}
                    </div>
                </div>

                <div id="notification-container">
                    <div class="alert fade" role="alert"></div>
                </div>
            {% endblock %}

            {% block footer %}
                {% include 'footer.html.twig'%}
            {% endblock %}


            {% block javascripts %}
                <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

                <script src="{{ asset('js/app.js') }}"></script>
                <script src="{{ asset('js/formValid.js') }}"></script>
                <script src="{{ asset('js/myProfile.js') }}"></script>
            {% endblock %}
        </body>
    </body>
</html></div></body></html>
