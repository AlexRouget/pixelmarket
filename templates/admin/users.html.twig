{% extends 'base.html.twig' %}
{% block pageContent %}
	{% block headerContent %}
		<div class="d-flex flex-column align-items-center m-2">
			<h1 class="display-4">
				<span class="text-blue">pixel</span>
				<span class="text-green">market</span>
			</h1>
			<p class="lead">Espace Administrateur !</p>
		</div>
		<hr class="my-4"/>
	{% endblock %}

	<h2>{{ title_users }}</h2>

	<p>il y a
		{{ count_new_users }}
		nouveaux posts</p>

	<div class="container-fluid">
		<div class="row">
			<div class="appear-animation d-flex flex-wrap">
				{% for user in users %}
					<div class="m-4">
						<div class="d-flex flex-column align-items-center">

							{% if user.avatar is not empty %}
								<img class="avatar-img" src="{{ asset('uploads/' ~ user.avatar) }}" alt="avatar">
							{% else  %}
								<img class="avatar-img" src="{{ asset('img/default-avatar-708x708.jpg') }}" alt="avatar-default">
							{% endif %}


							<div class="d-flex flex-column align-items-center mt-4">
								<h6 class="m-0">{{ user.username }}</h6>
								<div>
									{{ user.posts.count }}
									annonces en ligne
								</div>
							</div>

							<HR size="2" align="center" width="100%">
						</div>
						<div class="d-flex flex-column">
							<div class="d-flex justify-content-between ">
								<a href="{{ path('user_profile', {id: user.id}) }}" class="p-2">Voir</a>
								<a href="{{ path('user_edit', { id: user.id }) }}" class="p-2">Modifier</a>
							</div>
							<a class="btn btn-danger">Supprimer</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

{% endblock %}
