{% extends 'base.html.twig' %}
{% block title %}
    Profil de
    {{ user.username }}
{% endblock %}

{% block headerContent %}
    <h1 class="display-4">{{ user.username }}</h1>
{% endblock %}

{% block mainContent %}
    {% if user.posts is not empty %}
        <div class="container-fluid">
            {% include 'post/index.html.twig' %}
        </div>
    {% else %}
        <h5>
            {{ user.username }}
            n'a rien publié pour le moment !
        </h5>
    {% endif  %}
{% endblock %}

{% block sidebarContent %}
    <a href="{{ path('home')}}" class="btn btn-block btn-outline-primary">
        Revenir à l'accueil
    </a>

    {% if user.id == app.user.id %}
        <div class="card mt-4">
            <div class="card-body">
                include new post ;)
            </div>
        </div>
    {% endif %}
{% endblock %}
