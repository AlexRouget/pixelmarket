{% if user.posts is not empty %}
	<div class="container-fluid">
		{% include 'post/index.html.twig'  %}
	</div>
{% else %}

	{% block headerContent %}
		<div class="d-flex flex-column align-items-center m-2">
			<h1 class="display-4 m-5 d-flex flex-column align-items-center">
				<span class="text-blue">Hé bien
					{{ user.username }}!</span><br>
				<span class="text-green">Tu n'a rien publié pour le moment !</span>
			</h1>
			<p class="lead d-flex align-items-center">
				N'attends pas ! commence par là =>
				<a class="ml-2 btn-green" href="{{ path("post_new") }}">
					Créer une annonce
				</a>
			</p>
		</div>
		<hr class="my-4"/>
	{% endblock %}

{% endif  %}
