<form class="formSignIn col-10" method="post" action="{{ path('app_login') }}">
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté•es en tant que
            {{ app.user.username }},
            <a href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-2" placeholder="Nom d'utilisateur" required autofocus/>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required/>

    <input
    type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. See ('https://symfony.com/doc/current/security/remember_me.html') #}
    <div class="checkbox">
        <label for="remember_me">
            <input type="checkbox" name="_remember_me" id="remember_me"/>
            Remember me
        </label>
    </div>


    <div class="login-btn">
        <div class="d-flex justify-content-center">
            <button class="btn btn-lg btn-green" type="submit">
                C'est parti !
            </button>
        </div>
        <p class="text-center">
            Tu n'as pas encore de compte ?
            <a href="{{path("app_register")}}" role="button">Rejoins-nous</a>
        </p>
    </div>
</form>
