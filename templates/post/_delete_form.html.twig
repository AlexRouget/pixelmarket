<form
  method="post"
  action="{{ path('post_delete', { id: post.id }) }}"
  onsubmit="return confirm('Es-tu sÃ»r de vouloir supprimer cette annonce?');"
>
  <input type="hidden" name="_method" value="DELETE" />
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ post.id) }}"
  />
  {% if is_granted('ROLE_ADMIN') %}
  <button class="btn btn-danger">Supprimer</button>
  {% else %}
  <button class="btn btn-green">Supprimer</button>
  {% endif %}
</form>
