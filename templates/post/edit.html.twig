{% extends 'base.html.twig' %}
{% block pageContent %}

	<div class="card align-items-center bg-img">
		{% block headerContent %}
			<div class="container-fluid">
				<a href="javascript:history.back()">
					Retour
				</a>
				<div class="d-flex flex-column align-items-center m-2">
					<h1 class="display-4 form-title text-blue">
						Je modifie mon annonce
					</h1>
					<p class="lead">
						<span>À vos marques, prêts?</span>
						<span>
							Geekeur, à vos échanges !</span>
					</p>
				</div>
				<hr class="my-4 bg-white"/>
			</div>
		{% endblock %}

		<div id="post-edit-form" class="card-body col-7 bg-white my-4">
			{% set action = path('post_edit', { 'id': post.id }) %}

			{{
        include("post/_form.html.twig", { button_label: "Modifier mon annonce" })
      }}

			{% if is_granted('ROLE_ADMIN') %}

				{{ include("post/_delete_form.html.twig") }}

			{% endif %}
		</div>
	</div>
{% endblock %}
