{% set myDate = "now" | date %}
<div class="card-post">
	<div class="heart-like">
		{% if app.session %}
			{% if app.user and app.user.doesLike(post) %}
				<a class="like" href="{{ path('post_unlike', { 'id' : post.id }) }}">
					<i class="fas fa-heart liked"></i>
				</a>
			{% else %}
				<a class="like" href="{{ path('post_like', { 'id' : post.id }) }}">
					<i class="far fa-heart"></i>
				</a>
			{% endif %}
		{% else %}
			<a class="like" onclick="return confirm('vous devez vous connectez pour accéder à ces données')" href="{{ path('app_login')}}">
				<i class="far fa-heart"></i>
			</a>
		{% endif %}
	</div>

	<a href="{{ path('post_show', {'id': post.id}) }}" style="text-decoration: none;">

		{% if post.attachment is not empty %}
			<img src="{{ post.attachment }}" class="card" style='width:100%; height:10em;' alt="photo {{ post.title }}">
		{% else %}
			<div class="card" style='width:100%; height:10em;'>
				<p class="text-center">
					Pas de photo pour cette annonce
				</p>
			</div>
		{% endif %}

		{# <img src="{{ asset('uploads/' ~ post.attachment) }}" class="" style='width:100%; height:100%; object-fit: cover;'> #}
		{#  #}
		{# <img src="{{ post.attachment }} | default('{{ asset('img/default-avatar-708x708.jpg') }}')'" class="" style='width:100%; height:100%; object-fit: cover;' "> #}
			<div class="position-relative card-bottom"> <div class="card-post m-0 position-relative">
				<div class="card-price">
					{{ post.price }}€
				</div>
			</div>

			<div class="card-bottom-content">
				<h5 class="item-title text-center">{{ post.title }}</h5>

				<p class="m-0 tiny-text">
					{{ post.location }}
					{{ post.publishedAt|ago }}
				</p>
			</div>

		</div>
	</a>
</div>
